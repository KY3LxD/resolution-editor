extends layout

block title
  title Codes Print Table

block styles
  //+static("css", "/css/codeOverviewStyle.css")

block content
  .container
    +icon(icons.code, "large left" + colors.plaintext)
    h3 Code query
    h5.light for group type
      em=" " + groupType
    .divider
    table.striped
      thead
        tr
          th Level
          th Code
          th Name
      tbody
        each code in codes
          tr
            td=code.level
            td=code.code
            td=code.name || ""
    br
